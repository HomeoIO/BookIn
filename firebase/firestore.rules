rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can only read their own user document
      allow read: if isOwner(userId);
      // Users can create their own user document on signup
      allow create: if isOwner(userId);
      // Users can update their own profile
      allow update: if isOwner(userId);
      // No one can delete user documents (admin only)
      allow delete: if false;

      // Purchases subcollection
      match /purchases/{purchaseId} {
        // Users can only read their own purchases
        allow read: if isOwner(userId);
        // CRITICAL: Only server (via Admin SDK) can write purchases
        // This prevents users from faking purchases by manipulating Firestore
        allow write: if false;
      }

      // Subscriptions subcollection
      match /subscriptions/{subscriptionId} {
        // Users can only read their own subscriptions
        allow read: if isOwner(userId);
        // CRITICAL: Only server (via Admin SDK) can write subscriptions
        // This prevents users from faking subscriptions by manipulating Firestore
        allow write: if false;
      }

      // Progress subcollection (user learning progress)
      match /progress/{bookId} {
        // Users can read and write their own progress
        allow read, write: if isOwner(userId);
      }
    }

    // Books collection (public metadata)
    match /books/{bookId} {
      // Anyone can read book metadata
      allow read: if true;
      // Only admins can write (via Admin SDK)
      allow write: if false;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
